{
	"name": "express-ts-template",
	"version": "1.0.0",
	"description": "Simple starter template for ExpressJs and TypeScript based on expressjs/generator and TypeScript-Node-Starter",
	"main": "server.js",
	"scripts": {
		"start": "npm run serve",
		"build": "npm run build-ts && npm run tslint",
		"serve": "node dist/server.js",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
		"watch-node": "nodemon dist/server.js",
		"build-ts": "tsc",
		"clear-ts": "rm -fr dist && tsc",
		"watch-ts": "tsc -w",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"debug": "npm run build && npm run watch-debug",
		"serve-debug": "nodemon --inspect dist/server.js",
		"watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
		"install-global": "npm install pm2 -g",
		"pm2-monit": "pm2 monit"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@types/cookie-parser": "^1.4.1",
		"@types/cors": "^2.8.3",
		"@types/es6-promise": "^3.3.0",
		"@types/express-session": "^1.15.8",
		"@types/passport": "^0.4.4",
		"@types/ramda": "^0.25.24",
		"@types/superagent": "^3.5.7",
		"@types/uuid": "^3.4.3",
		"cookie-parser": "^1.4.3",
		"cors": "^2.8.4",
		"dotenv": "^5.0.1",
		"express": "^4.16.2",
		"express-async-handler": "^1.1.3",
		"express-session": "^1.15.6",
		"express-unless": "^0.5.0",
		"html-minifier": "^3.5.17",
		"install": "^0.11.0",
		"npm": "^5.8.0",
		"passport": "^0.4.0",
		"passport-azure-ad": "^3.0.12",
		"passport-oauth2-refresh": "^1.1.0",
		"puppeteer": "^1.5.0",
		"ramda": "^0.25.0",
		"shelljs": "^0.8.2",
		"superagent": "^3.8.2",
		"uuid": "^3.2.1"
	},
	"devDependencies": {
		"@microsoft/microsoft-graph-types": "^1.2.0",
		"@types/express": "^4.11.0",
		"@types/node": "^9.4.0",
		"@types/puppeteer": "^1.2.0",
		"concurrently": "^3.5.1",
		"nodemon": "^1.14.11",
		"tslint": "^5.9.1",
		"typescript": "^2.6.2"
	}
}
